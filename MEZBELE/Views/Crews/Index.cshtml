@model IEnumerable<MEZBELE.Models.Crews>

@{
    ViewBag.Title = "Ekip Paneli";
    Layout = "~/Views/Shared/App/_AppLayout.cshtml";
}


<div>
    <h4>Ekip Paneli</h4>
    <hr />

    <div class="ui one column grid">
        <div class="column">
            <div class="ui raised segment">
                <a class="ui red ribbon label">Ekipler</a>

                <br /><br />

                <p class="ui right aligned header">
                    @Html.ActionLink("Ekip Oluştur", "Create", "", new { @class = "ui positive button" })
                </p>

                <table class="ui very basic table" style="padding: 10px;">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Avatar)</th>
                            <th>Seçenekler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td style="padding-left:2em;">
                                @Html.DisplayFor(modelItem => item.Avatar)
                            </td>
                            <td style="padding-left:2em;">

                                @if (Session["UserId"].ToString() == item.OwnerId.ToString())
                                {
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "ui primary button", @style = "margin-bottom: 5px;" })
                                }

                                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "ui positive button", @style = "margin-bottom: 5px;" })

                                @if (Session["UserId"].ToString() == item.OwnerId.ToString())
                                {
                                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "ui negative button", @style = "margin-bottom: 5px;" })
                                }

                            </td>
                        </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>
