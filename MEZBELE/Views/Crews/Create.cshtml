@model MEZBELE.Models.Crews

@{
    ViewBag.Title = "Yeni Ekip Oluştur";
    Layout = "~/Views/Shared/App/_AppLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ekip Oluştur</h4>
        <hr />

        <div class="ui one column grid">
            <div class="column">
                <div class="ui raised segment">
                    <a class="ui red ribbon label">Ekip Bilgileri</a>

                    <br /><br />

                    @Html.ValidationSummary(true, "")
                    <div class="form-group">
                        @Html.LabelFor(model => model.CrewName)
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CrewName)
                            @Html.ValidationMessageFor(model => model.CrewName, "")
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CrewAvatar)
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CrewAvatar)
                            @Html.ValidationMessageFor(model => model.CrewAvatar, "")
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Oluştur" class="ui positive button" />
                        </div>
                    </div>

                    <div>
                        @Html.ActionLink("Ekip Listesine Geri Dön", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
