@model MEZBELE.Models.Crews

@{
    ViewBag.Title = Model.CrewName + " - Ekibi Sil";
    Layout = "~/Views/Shared/App/_AppLayout.cshtml";
}

<div>
    <h4>Ekibi Sil</h4>
    <hr />
    <div class="ui one column grid">
        <div class="column">
            <div class="ui raised segment">
                <a class="ui red ribbon label">Silinecek Ekip</a>
                <span>Aşağıdaki bilgilere sahip ekibi silmek istediğinize emin misiniz?</span>
                <br /><br /><br />

                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.CrewName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CrewName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CrewAvatar)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CrewAvatar)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Sil" class="ui negative button" /> |
                        @Html.ActionLink("Ekip Listesine Geri Dön", "Index")
                    </div>
                }

            </div>
        </div>
    </div>
</div>
