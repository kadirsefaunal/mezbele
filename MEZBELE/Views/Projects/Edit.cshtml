@model MEZBELE.Models.Projects

@{
    ViewBag.Title = Model.Name + " - Proje Bilgilerini Düzenle";
    Layout = "~/Views/Shared/App/_AppLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="ui one column grid">
            <div class="column">
                <div class="ui raised segment">
                    <a class="ui red ribbon label">Proje Bilgileri</a>

                    <br /><br />

                    @Html.ValidationSummary(true, "")
                    @Html.HiddenFor(model => model.Id)

                    <table class="ui definition table">
                        <tbody>
                            <tr>
                                <td>@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })</td>
                                <td>
                                    <div class="ui fluid input">
                                        @Html.EditorFor(model => model.Name)
                                        @Html.ValidationMessageFor(model => model.Name, "")
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })</td>
                                <td>
                                    <div class="ui form">
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @rows = "2" } })
                                        @Html.ValidationMessageFor(model => model.Description, "")
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="field">
                        <input class="ui teal submit button" type="submit" value="Kaydet" style="margin-bottom: 5px;" />
                        @Html.ActionLink("Proje listesine dön", "Index", null, new { @class = "ui negative button" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}