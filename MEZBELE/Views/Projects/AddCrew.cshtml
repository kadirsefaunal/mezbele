@model MEZBELE.Models.Projects

@{
    ViewBag.Title = "Projeye Ekip Ekle";
    Layout = "~/Views/Shared/App/_AppLayout.cshtml";
}

@using (Html.BeginForm("AddCrew", "Projects", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Projeye Ekip Ata</h4>
        <hr />

        <div class="ui one column grid">
            <div class="column">
                <div class="ui raised segment">
                    <a class="ui red ribbon label">Ekip Seçimi</a>

                    <br /><br />

                    @Html.ValidationSummary(true, "")
                    @Html.HiddenFor(model => model.Id)

                    <div class="field">
                        @Html.DropDownList("crewId", (SelectList)ViewData["AllCrews"], new { @class = "ui fluid dropdown" })
                    </div>

                    <div class="field">
                        <input class="ui teal submit button" type="submit" value="Ekle" style="margin-bottom: 5px;" />
                        @Html.ActionLink("Proje Listesine Geri Dön", "Index", null, new { @class = "ui negative button" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        // dropdown
        $('.ui.dropdown').dropdown();
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

