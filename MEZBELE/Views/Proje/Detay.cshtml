@model MEZBELE.ViewModels.VM
@{
    ViewBag.Title = "Proje Detayı";
    Layout = "~/Views/Shared/App/_AppLayout.cshtml";
}
<br />
<div class="row">
    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <div class="row">
                    <div class="col s1">
                        <a href="#!user"><img class="circle responsive-img" src="@Model.Yonetici.Avatar"></a>
                    </div>

                    <div class="col s9">
                        <span class="card-title">@Model.AktifProje.ProjeAdi - Proje Detayı</span>
                        <p>
                            @Model.AktifProje.Aciklama
                        </p>
                    </div>
                    <div class="col s2">
                        @foreach (var calisan in Model.Calisanlar)
                        {
                        <a href="#!"><img class="circle" src="@calisan.Avatar" style="width:32px; height:32px;"></a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <nav>
        <div class="nav-wrapper blue-grey darken-1">
            <div class="col s12">
                <a href="#!" class="breadcrumb">@Model.AktifProje.ProjeAdi</a>
                <a href="#!" class="breadcrumb">Süreçler</a>
            </div>
        </div>
    </nav>
</div>

<div class="row">
    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <div class="row">
                    <div class="col s12">
                        <ul class="collapsible blue-grey-text text-darken-1" data-collapsible="expandable">
                            <li>
                                <div class="collapsible-header"><i class="material-icons">filter_drama</i>Süreç Adı</div>
                                <div class="collapsible-body">
                                    <ul class="collection">
                                        <li class="collection-item">
                                            <div class="row valign-wrapper" style="margin-bottom:-1rem;">
                                                <div class="col s5">
                                                    <p class="flow-text">
                                                        <b>#ID</b> >
                                                        İş Adı
                                                    </p>
                                                </div>
                                                <div class="col s3 pull-s1">
                                                    <span class="badge red white-text">Atanan çalışan avatarları</span>
                                                </div>
                                                <div class="col s4">
                                                    <div class="progress valign pink lighten-3">
                                                        <div class="determinate pink darken-1" style="width: 70%"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <div class="collapsible-header"><i class="material-icons">place</i>Süreç Adı 2</div>
                                <div class="collapsible-body white-text">
                                    <ul class="collapsible blue-grey-text text-darken-1" data-collapsible="accordion">
                                        <li>
                                            <div class="collapsible-header"><i class="material-icons">filter_drama</i>Alt Süreç Adı</div>
                                            <div class="collapsible-body white-text"><p>Lorem ipsum dolor sit amet.</p></div>
                                        </li>
                                        <li>
                                            <div class="collapsible-header"><i class="material-icons">place</i>Alt Süreç Adı 2</div>
                                            <div class="collapsible-body">
                                                <ul class="collection">
                                                    <li class="collection-item">
                                                        <div class="row valign-wrapper" style="margin-bottom:-1rem;">
                                                            <div class="col s5">
                                                                <p class="flow-text">
                                                                    <b>#ID</b> >
                                                                    İş Adı
                                                                </p>
                                                            </div>
                                                            <div class="col s3 pull-s1">
                                                                <span class="badge red white-text">Atanan çalışan avatarları</span>
                                                            </div>
                                                            <div class="col s4">
                                                                <div class="progress valign pink lighten-3">
                                                                    <div class="determinate pink darken-1" style="width: 70%"></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="collapsible-header"><i class="material-icons">whatshot</i>Alt Süreç Adı 3</div>
                                            <div class="collapsible-body white-text"><p>Lorem ipsum dolor sit amet.</p></div>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <div class="collapsible-header"><i class="material-icons">whatshot</i>Süreç Adı 3</div>
                                <div class="collapsible-body white-text"><p>Lorem ipsum dolor sit amet.</p></div>
                            </li>
                        </ul>
                    </div>
                </div>
                @if (Model.AktifProje.YoneticiID == Model.Kullanici.ID)
                {
                @Html.ActionLink("Süreç Ekle", "SurecEkle", "Proje", new { projeID = Model.AktifProje.ID }, new { @class = "waves-effect waves-green btn green right" })
                }
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.collapsible').collapsible();
    });
</script>